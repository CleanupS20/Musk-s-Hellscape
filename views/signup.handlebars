<form id="signup" action="submit">
    <div class="container">
        <div class="tv-show">
            <div class="card-header">
                <h2>Sign Up</h2>
            </div>
            <div class="card-body">
                <label for="email-signup">Email:</label>
                <input id="email" type="email"/>
                <br/>
                <label for="username-sign">Username:</label>
                <input id="username" type="text"/>
                <br/>
                <label for="password-signup">Password:</label>
                <input id="password" type="password"/>
                <br/>
                <label for="password-confirm-signup">Confirm Password:</label>
                <input id="confirm-password" type="password">
                <br/>
                <label for="avatar-image-signup">Select an Avatar Image:</label>
                <div class="avatar-img-cont">
                    <img style="width: 25%;" data-url="Images/Bear.png" src="Images/Bear.png" alt="Bear cartoon"/>
                    <img style="width: 25%;" data-url="Images/Dino.png" src="Images/Dino.png" alt="Dino cartoon"/>
                    <img style="width: 25%;" data-url="Images/Elephan.png" src="Images/Elephan.png" alt="Elephant cartoon"/>
                    <img style="width: 25%;" data-url="Images/Leo.png" src="Images/Leo.png" alt="Lion cartoon"/>
                    <img style="width: 25%;" data-url="Images/Pengu.png" src="Images/Pengu.png" alt="Penguin cartoon"/>
                </div>
                <br/>
                <button type="submit">Sign up</button>
            </div>
        </div>
    </div>
</form>

